<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="offset-3 col-6">
        <h1>Signup for Wanderlust</h1>
        <form action="/signup" method="post" class="need-validation" novalidate>
            <div class="mb-3 mt-4">
                <label for="username" class="form-label">Username</label>
                <input
                  type="text"
                  name="username"
                  id="username"
                  class="form-control"
                  required
                />
                <div class="valid-feedback">
                  Username Looks good!
                </div>
                <div class="invalid-feedback">
                  Enter valid Username
                </div>
            </div>
            <div class="mb-3 mt-4">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  name="email"
                  id="email"
                  class="form-control"
                  required
                />
            </div>
            <div class="mb-3 mt-4">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  name="password"
                  id="password"
                  class="form-control"
                  required
                />
            </div>

            <button class="btn btn-success">Signup</button>
        </form>

    </div>
</div>