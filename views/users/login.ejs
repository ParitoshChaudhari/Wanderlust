<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="offset-3 col-6">
        <h1>Login for Wanderlust</h1>
        <form action="/login" method="post" class="need-validation" novalidate>
            <div class="mb-3 mt-4">
                <label for="username" class="form-label">Username</label>
                <input
                  type="text"
                  name="username"
                  id="username"
                  class="form-control"
                  required
                />
            </div>
            <div class="mb-3 mt-4">
                <label for="password" class="form-label">Password</label>
                <input
                  type="password"
                  name="password"
                  id="password"
                  class="form-control"
                  required
                />
            </div>
            <button class="btn btn-success">Login</button>
        </form>

    </div>
</div>