<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-3">
      <h3 class="mt-3 ">Listing Details:</h3>
    </div>
    <div class="card mt-3 col-6 offset-3 show-card">
      <img src="<%= data.image %>" class="card-img-top show-img" alt="..." />
      <div class="card-body">
        <b><h5 class="card-title"><%= data.title %></h5></b>
        <p class="card-text">
          <%= data.description %>
          <br />
          Price :- &#8377; <%= data.price.toLocaleString("en-in") %>
          <br />
          <%= data.location %>
          <br />
          <%= data.country %>
        </p>
      </div>
    </div>

    <div class="btns mb-4">
      <a
      style="background-color:#fe424d !important ; border: none;"
        href="/listings/<%= data._id %>/edit"
        class="btn btn-dark col-1 offset-3 edit-btn"
        >edit</a
      >

      <form method="POST" action="/listings/<%= data._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">delete</button>
      </form>
    </div>
  </div>
</body>
