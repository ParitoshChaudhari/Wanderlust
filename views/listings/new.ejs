<% layout("/layouts/boilerplate") %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3 class="mt-3">Create a new listing</h3>
      <form action="/listings" method="POST"  novalidate class="needs-validation" enctype="multipart/form-data" >
        <div class="mb-3 mt-4">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            placeholder="Add a CatchyTitle"
            class="form-control"
            required
          />
          <div class="valid-feedback">
            Title Looks good!
          </div>
          <div class="invalid-feedback">
            Enter valid Title
          </div>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="description"
            class="form-control"
            required
          ></textarea>
          <div class="valid-feedback">
            Description Looks good!
          </div>
          <div class="invalid-feedback">
            Enter valid Description
          </div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <i class="fa-solid fa-circle-info" data-bs-toggle="tooltip" data-bs-title="File format Suppported (jpeg,png,jpg) only" data-bs-placement="top"></i>
          <input
            type="file"
            name="listing[image]"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label for="listing[category]" class="form-label">Select Category</label>
          <select class="form-select" name="listing[category]" required>
            <option value="Trending">Trending</option>
            <option value="Rooms">Rooms</option>
            <option value="Beach">Beach</option>
            <option value="Mountains">Mountains</option>
            <option value="Castle">Castle</option>
            <option value="Arctic">Arctic</option>
            <option value="Pools">Pools</option>
            <option value="Boats">Boats</option>
            <option value="Container">Container</option>
            <option value="Tower">Tower</option>
            <option value="others" selected>others</option>
          </select>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              name="listing[price]"
              placeholder="2000"
              class="form-control"
              required
            />
            <div class="valid-feedback">
              Price Looks good!
            </div>
            <div class="invalid-feedback">
              Enter valid Price 
            </div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              placeholder="India"
              class="form-control"
              required
            />
            <div class="valid-feedback">
              Country Looks good!
            </div>
            <div class="invalid-feedback">
              Enter valid Country 
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            placeholder="Shirpur,Maharashtra"
            class="form-control"
            required
          />
          <div class="valid-feedback">
            Location Looks good!
          </div>
          <div class="invalid-feedback">
            Enter valid Location 
          </div>
        </div>

        <!-- Interactive Map for Selecting Location -->
        <div class="mb-3">
          <h4>Select Location on Map</h4>
          <div id="map" style="height: 300px; border-radius: 10px;"></div>
          <p>Click on the map to select a location.</p>
        </div>

        <!-- Hidden Fields to Store Selected Coordinates -->
        <input type="hidden" id="latitude" name="listing[latitude]">
        <input type="hidden" id="longitude" name="listing[longitude]">

        <button type="submit" class="btn btn-dark mb-3 add-btn">Submit</button>
      </form>
    </div>
  </div>
</body>
