<% layout("/layouts/boilerplate") %>
<body>
  <!-- category filters -->
  <div id="filters" class="mt-3">
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-umbrella-beach"></i>
      <p>Beach</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain-city"></i>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-chess-rook"></i>
      <p>Castle</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-snowflake"></i>
      <p>Arctic</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Pools</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-sailboat"></i>
      <p>Boats</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-box"></i>
      <p>Container</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tower-observation"></i>
      <p>Tower</p>
    </div>

    <!-- tax button filter -->
    <div class="tax-toggle rounded  d-flex justify-content-center align-items-center p-2 ms-auto" style="border: 1px solid black ; border-style: dashed;">
      <div class="form-check-reverse form-switch ">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Taxes</label>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" >
    <%for(let data of allListening){%>
      <a href="/listings/<%= data._id %>" class="listing-link">
        <div class="card col listing-card" style="width: 20rem">
          <img src="<%= data.image.url %>" class="card-img-top" style="height:20rem" alt="lisiting_data" />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <b><h5 class="card-title"><%= data.title %></h5></b>
            <p class="card-text">
              &#8377; <%= (data.price || 0).toLocaleString("en-in") %> / night
              <i class="tax_info"> &nbsp; &nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </a>
      <% }%>
  </div>
  
</body>
